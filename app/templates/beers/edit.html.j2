{% extends "_base.html.j2" %}
{% block base %}
  {{ super() }}
{% endblock base %}

{% block body %}
{% if message %}
<div class="ui message success">
  <i class="close icon"></i>
  <div class="header">
    Salvo com sucesso!
  </div>
  <p>{{message}}</p>
</div>
{% endif %}
<form class="ui form" action="{{ url_for('edit_beer', id=beer.id) }}" method="post" enctype="multipart/form-data">
<h4 class="ui dividing header">Dados da cerveja</h4>
<div class="three fields">
  <div class="field">
    <label for="name">Nome</label>
    <input type="text" name="name" placeholder="Nome" required="true" value="{{beer.name}}">
  </div>
  <div class="field">
    <label for="description">Descrição</label>
    <input type="text" name="description" placeholder="Descrição" required="true" value="{{beer.description}}">
  </div>
  <div class="field">
    <label for="name">Marca</label>
    <input type="text" name="mark" placeholder="Ex: Baden Baden" required="true" value="{{beer.mark}}">
  </div>
</div>
<div class="three fields">
  <div class="field">
    <label for="value">Valor</label>
    <input type="number" name="value" min="0" required="true" placeholder="R$" value="{{beer.value}}" step="0.1">
  </div>
  <div class="field">
    <label for="type">Tipo</label>
    <select class="ui fluid dropdown" name="type" value="{{beer.type}}">
      <option value="Pilsen">Pilsen</option>
      <option value="Pale Ale">Pale Ale</option>
      <option value="Lagger">Lagger</option>
    </select>
  </div>
  <div class="field">
    <label for="quantity">Quantidade (Garrafas Longneck)</label>
    <input type="number" name="quantity" placeholder="Ex: 10" min="0" required="true" value="{{beer.quantity}}">
  </div>
</div>
<div class="field">
  <label for="image">Imagem</label>
  <!-- <input type="file" name="image" accept="image/*" value="{{beer.image}}"> -->
  <img src="/static/images/{{beer.image}}" alt="" style="width: 200px;">
</div>
<button type="submit" name="button" class="ui primary button">Salvar</button>
<a href="/beer" class="ui button">Cancelar</a>
</form>



<script type="text/javascript">
  $('select.dropdown')
  .dropdown()
  ;
  $('.message .close')
  .on('click', function() {
    $(this)
      .closest('.message')
      .transition('fade')
    ;
  })
;
</script>
{% endblock body %}
