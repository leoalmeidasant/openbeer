<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="../static/semantic/dist/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="../static/menu.css">
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>
    <link rel="stylesheet" type="text/css" href="../static/slick-theme.css"/>
    <script src="../static/semantic/dist/semantic.min.js"></script>
  </head>
  <body>

    <div class="ui container">
    {% block base %}
      <div class="ui huge header center aligned" id="titulo">
        OPENBEER
      </div>
      <div class="ui secondary menu">
        <a class="item" href="/">
          Home
        </a>
        <a class="item" href="/beers">
          Cervejas
        </a>
        <a class="item" href="/snacks">
          Petiscos
        </a>
        {% if session['role'] == 'admin' %}
        <a href="/beer" class="item">
          Admnistração
        </a>
        {% endif%}
        <div class="right menu">
          <div class="item">
            <div class="ui icon input">
              <input type="text" placeholder="Search...">
              <i class="search link icon"></i>
            </div>
          </div>
          {% if current_user.is_anonymous %}
          <a class="ui item" href="/login">
            <i class="user icon large"></i>
            Logar
          </a>
          {% else %}
          <a href="/buys" class="item">Meus pedidos</a>
          <a href="/cart" class="item">
            <i class="in cart icon large"></i>
            Carrinho
          </a>
          <a class="ui item" href="/logout">
            <i class="in user icon large"></i>
            Sair,  ({{ current_user.name }})
          </a>
          {% endif %}
        </div>
      </div>
    {% endblock base %}

    <div class="ui container raised blue segment">
      {% with messages = get_flashed_messages() %}
      {% if messages %}
        <div class="ui message">
          <i class="close icon"></i>
          <div class="header flashes">
            {% for message in messages %}
              {{ message }}
            {% endfor %}
          </div>
        </div>
      {% endif %}
      {% endwith %}

      {% block body %}
      {% endblock body %}
    </div>
  </div>
  </body>

  <script
    src="https://code.jquery.com/jquery-3.1.1.min.js"
    integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
    crossorigin="anonymous">
  </script>
  <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
  <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>
</html>

<script type="text/javascript">
  $('.message .close')
  .on('click', function() {
    $(this)
      .closest('.message')
      .transition('fade')
    ;
  });

  $(document).ready(function(){
    $('.glass').slick({
      infinite: true,
      slidesToShow: 5,
      slidesToScroll: 5,
      arrow: true
    });
  });

  $('select.dropdown')
  .dropdown()
  ;
</script>

<style media="screen">
  #titulo {
    font-size: 6em;
  }
</style>
